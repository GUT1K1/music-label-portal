{
  "tests": [
    {
      "name": "GET without auth returns 401",
      "method": "GET",
      "path": "/",
      "expectedStatus": 401,
      "expectedBody": {
        "error": "Unauthorized - X-User-Id required"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "GET with invalid user ID returns 401",
      "method": "GET",
      "path": "/",
      "headers": {
        "X-User-Id": "invalid"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "Invalid user ID"
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "POST without auth returns 401",
      "method": "POST",
      "path": "/",
      "body": {
        "username": "test",
        "full_name": "Test User",
        "role": "artist"
      },
      "expectedStatus": 401,
      "expectedBody": {
        "error": "string"
      },
      "bodyMatcher": "partial"
    }
  ]
}
